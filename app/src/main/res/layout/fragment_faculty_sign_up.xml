<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent" tools:context="in.ace.pardeep.org.acev2.FacultySignUp">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill your details to SignUp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:background="@drawable/leftnew"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"/>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="70dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/editTextUserNameFacultytSignUp"
                android:hint="Full Name"
                android:textColor="@android:color/black"
                android:inputType="text"
                android:padding="5dp"/>
            <EditText
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/editTextEmailIdFacultytSignUp"
                android:hint="Email Address"
                android:textColor="@android:color/black"
                android:inputType="textEmailAddress"
                android:padding="5dp"/>
            <Spinner
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/spinnerDepartmentFacultySignUp"
                android:textColor="@android:color/black" />
            <Button
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Register"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:id="@+id/buttonRegisterFacutySignUp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

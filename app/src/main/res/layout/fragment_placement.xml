<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" tools:context="in.ace.pardeep.org.acev2.PlacementFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPlacementFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placements"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20sp"/>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefreshPlacementFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">
            <ListView
                android:id="@+id/placementFragmentListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>


</FrameLayout>

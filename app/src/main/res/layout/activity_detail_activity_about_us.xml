<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gcolor"
    tools:context="in.ace.pardeep.org.acev2.DetailActivityAboutUs">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/primary_dark">
         <TextView
             android:id="@+id/textUpperDetailListAboutUs"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="History"
             android:layout_gravity="center"
             android:textSize="20sp"
             android:textColor="@android:color/white"/>
          <Button
              android:id="@+id/backButton"
              android:layout_width="30dp"
              android:layout_height="28dp"
              android:background="@drawable/leftnew"
              android:layout_gravity="left|center_vertical"
              android:layout_marginLeft="8dp"/>
      </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/imageDetailListAboutUs"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_about"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qualificationTextDetailList"
                android:text="qualification"
                android:layout_margin="20dp"
                android:textSize="18sp"
                 />
        </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionDetailListAboutUs"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Description"
                    android:textSize="18sp"/>
            </LinearLayout>
            </ScrollView>
    </LinearLayout>
</LinearLayout>

